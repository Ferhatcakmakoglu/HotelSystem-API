@model List<TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Referans Adı</th>
            <th>Referans Görseli</th>
            <th>Personel Ünvan</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TestimonialID</td>
                <td>@item.Name</td>
                <td>@item.Image</td>
                <td>@item.Title</td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-info">Yeni Referans Ekle</a>

